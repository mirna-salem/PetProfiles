<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PetProfiles.Maui"
             xmlns:converters="clr-namespace:PetProfiles.Maui.Converters"
             x:Class="PetProfiles.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:ImageSourceConverter x:Key="ImageSourceConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:EditModeTitleConverter x:Key="EditModeTitleConverter" />
            <converters:EditModeButtonConverter x:Key="EditModeButtonConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
